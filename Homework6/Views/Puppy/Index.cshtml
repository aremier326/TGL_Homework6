@model IEnumerable<Puppies.Model.Puppy>

@{
}

<h1 class="m-5">Puppies</h1>

<table class="table">
    <thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Gender</th>
        <th>Age</th>
        <th>Weight</th>
        <th>Height</th>
        <th>FurColor</th>
        <th>Breed</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.Id</th>
            <td>@item.Name</td>
            <td>@item.Gender</td>
            <td>@item.Age</td>
            <td>@item.Weight</td>
            <td>@item.Height</td>
            <td>@item.FurColor</td>
            <td>@item.Breed.Name</td>
            <td>
                @Html.ActionLink("View", "View", "Puppy", new { id = @item.Id }, new { @class="btn btn-primary" })
            </td>
        </tr>
    }
    </tbody>
</table>