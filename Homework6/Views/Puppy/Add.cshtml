@using Puppies.Model.Enums
@model Puppies.Model.Puppy

<h1 class="m-5">Add some doggo!</h1>

<form method="post" asp-action="Add" class="mt-5">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input type="text" class="form-control" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Gender" class="form-label"></label>
        <select asp-for="Gender" class="form-control" asp-items="Html.GetEnumSelectList<GenderEnum>()">
        </select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Age" class="form-label"></label>
        <input type="text" class="form-control" asp-for="Age">
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Weight" class="form-label"></label>
        <input type="text" class="form-control" asp-for="Weight">
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Height" class="form-label"></label>
        <input type="text" class="form-control" asp-for="Height">
        <span asp-validation-for="Height" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="FurColor" class="form-label"></label>
        <select asp-for="FurColor" class="form-control" asp-items="Html.GetEnumSelectList<FurColorEnum>()">
        </select>
        <span asp-validation-for="FurColor" class="text-danger"></span>
    </div>
     <div class="form-group m-2">
        <label asp-for="Breed.Name" class="col-form-label"></label>
        <select asp-for="BreedId" class="form-control" asp-items="ViewBag.Breeds"></select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
